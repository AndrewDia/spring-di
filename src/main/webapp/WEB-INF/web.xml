<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <servlet>
    <servlet-name>ProductCreationController</servlet-name>
    <servlet-class>com.example.controller.ProductCreationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductCreationController</servlet-name>
    <url-pattern>/create/product</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrderCreationController</servlet-name>
    <servlet-class>com.example.controller.OrderCreationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrderCreationController</servlet-name>
    <url-pattern>/create/order</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProductsListController</servlet-name>
    <servlet-class>com.example.controller.ProductsListController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductsListController</servlet-name>
    <url-pattern>/list/products</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OrdersListController</servlet-name>
    <servlet-class>com.example.controller.OrdersListController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OrdersListController</servlet-name>
    <url-pattern>/list/orders</url-pattern>
  </servlet-mapping>
</web-app>
